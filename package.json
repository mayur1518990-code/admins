{
  "name": "doc-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:user": "cd apps/user-app && npm run dev",
    "dev:admin": "cd apps/admin-app && npm run dev",
    "dev": "concurrently \"npm run dev:user\" \"npm run dev:admin\"",
    "build:user": "cd apps/user-app && npm run build",
    "build:admin": "cd apps/admin-app && npm run build",
    "build": "npm run build:user && npm run build:admin",
    "build:analyze": "cd apps/user-app && npm run build && cd ../admin-app && npm run build",
    "start:user": "cd apps/user-app && npm run start",
    "start:admin": "cd apps/admin-app && npm run start",
    "start": "concurrently \"npm run start:user\" \"npm run start:admin\"",
    "lint": "npm run lint:user && npm run lint:admin",
    "lint:user": "cd apps/user-app && npm run lint",
    "lint:admin": "cd apps/admin-app && npm run lint",
    "install:all": "npm install && cd apps/user-app && npm install && cd ../admin-app && npm install",
    "clean": "rm -rf apps/*/node_modules apps/*/.next apps/*/out",
    "optimize": "npm run clean && npm run install:all"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  }
}
